{
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "flake8.args": [
        "--max-line-length",
        "119"
    ],
    "autoDocstring.customTemplatePath": "${workspaceFolder}/.vscode/docstring-template.txt",
}